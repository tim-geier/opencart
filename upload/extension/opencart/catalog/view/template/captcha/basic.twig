<fieldset>
  <legend>{{ text_captcha }}</legend>
  <div class="form-group{{ route|slice(0, 9) != 'checkout/' ? ' row' : '' }} required">
    {% if route|slice(0, 9) == 'checkout/' %}
      <label for="input-payment-captcha" class="col-form-label">{{ entry_captcha }}</label>
      <input type="text" name="captcha" id="input-payment-captcha" class="form-control" autocomplete="off"/>
      <img src="index.php?route=extension/opencart/captcha/basic|captcha" alt=""/>
    {% else %}
      <label for="input-captcha" class="col-sm-2 col-form-label">{{ entry_captcha }}</label>
      <div class="col-sm-10">
        <input type="text" name="captcha" value="" id="input-captcha" class="form-control"/> <img src="index.php?route=extension/opencart/captcha/basic|captcha" alt=""/>
      </div>
    {% endif %}
  </div>
</fieldset>