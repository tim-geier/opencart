<div class="table-responsive">
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', $(this).prop('checked'));"/></td>
				<td class="text-start">{% if sort == 'name' %}<a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>{% else %}<a href="{{ sort_name }}">{{ column_name }}</a>{% endif %}</td>
				<td class="text-start">{% if sort == 'key' %}<a href="{{ sort_key }}" class="{{ order|lower }}">{{ column_key }}</a>{% else %}<a href="{{ sort_key }}">{{ column_key }}</a>{% endif %}</td>
				<td class="text-start d-none d-lg-table-cell">{% if sort == 'regex' %}<a href="{{ sort_regex }}" class="{{ order|lower }}">{{ column_regex }}</a>{% else %}<a href="{{ sort_regex }}">{{ column_regex }}</a>{% endif %}</td>
				<td class="text-end d-none d-lg-table-cell">{% if sort == 'sort_order' %}<a href="{{ sort_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>{% else %}<a href="{{ sort_sort_order }}">{{ column_sort_order }}</a>{% endif %}</td>
				<td class="text-end">{{ column_action }}</td>
			</tr>
		</thead>
		<tbody>
			{% if seo_profiles %}
				{% for seo_profile in seo_profiles %}
					<tr>
						<td class="text-center"><input type="checkbox" name="selected[]" value="{{ seo_profile.seo_profile_id }}"/></td>
						<td class="text-start">{{ seo_profile.name }}</td>
						<td class="text-start">{{ seo_profile.key }}</td>
						<td class="text-start d-none d-lg-table-cell">{{ seo_profile.regex }}</td>
						<td class="text-end d-none d-lg-table-cell">{{ seo_profile.sort_order }}</td>
						<td class="text-end"><a href="{{ seo_profile.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a></td>
					</tr>
				{% endfor %}
			{% else %}
				<tr>
					<td class="text-center" colspan="6">{{ text_no_results }}</td>
				</tr>
			{% endif %}
		</tbody>
	</table>
</div>
<div class="row">
	<div class="col-sm-6 text-start">{{ pagination }}</div>
	<div class="col-sm-6 text-end">{{ results }}</div>
</div>